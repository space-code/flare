Content":[{"type":"text","text":"This configuration tells Flare to always fetch the latest data, ignoring any cached data. You can adjust this behavior as needed for your app."}]}]}],"hierarchy":{"paths":[["doc:\/\/Flare\/documentation\/Flare"]]},"references":{"doc://Flare/documentation/Flare/FetchCachePolicy/fetch":{"abstract":[{"text":"Fetch the current data without using the cache.","type":"text"}],"type":"topic","fragments":[{"kind":"keyword","text":"case"},{"kind":"text","text":" "},{"kind":"identifier","text":"fetch"}],"identifier":"doc:\/\/Flare\/documentation\/Flare\/FetchCachePolicy\/fetch","url":"\/documentation\/flare\/fetchcachepolicy\/fetch","title":"FetchCachePolicy.fetch","role":"symbol","kind":"symbol"},"doc://Flare/documentation/Flare":{"kind":"symbol","abstract":[{"type":"text","text":"Flare provides an elegant interface for In-App Purchases, supporting non-consumable and consumable purchases as well as subscriptions."}],"identifier":"doc:\/\/Flare\/documentation\/Flare","role":"collection","type":"topic","url":"\/documentation\/flare","title":"Flare"},"doc://Flare/documentation/Flare/FetchCachePolicy/cachedOrFetch":{"kind":"symbol","url":"\/documentation\/flare\/fetchcachepolicy\/cachedorfetch","abstract":[{"type":"text","text":"Use the cached data if available; otherwise, fetch the data."}],"title":"FetchCachePolicy.cachedOrFetch","type":"topic","identifier":"doc:\/\/Flare\/documentation\/Flare\/FetchCachePolicy\/cachedOrFetch","role":"symbol","fragments":[{"text":"case","kind":"keyword"},{"text":" ","kind":"text"},{"text":"cachedOrFetch","kind":"identifier"}]}}}